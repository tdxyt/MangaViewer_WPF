<Window x:Class="MangaViewer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaViewer_WPF"
        mc:Ignorable="d"
        Title="MangaViewer" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized"  WindowStyle="None" AllowsTransparency="True" Background="#80000000" Loaded="Window_Loaded" MouseDown="Window_MouseDown">
    <Grid>
        <Image x:Name="Img" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock x:Name="Tips" Foreground="White" Background="#80000000" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontFamily="Calibri" FontWeight="Bold" Padding="10,10,10,10" Visibility="Hidden"/>
    </Grid>
</Window>
