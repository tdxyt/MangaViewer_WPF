<Window x:Class="MangaViewer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaViewer_WPF"
        mc:Ignorable="d"
        Title="MangaViewer" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized"  WindowStyle="None" AllowsTransparency="True" Background="#80000000" Loaded="Window_Loaded">
    <Grid>
        <Image Source="{Binding Path=Img_src}" RenderTransform="{Binding Path=Img_scale}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding Path=Img_margin}">
            <Image.Clip>
                <RectangleGeometry Rect="{Binding Path=Img_rect}"></RectangleGeometry>
            </Image.Clip>
        </Image>
        <TextBlock Text="{Binding Path=Tips_text}" Foreground="White" Background="#80000000" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontFamily="Calibri" FontWeight="Bold"
                   Visibility="{Binding Path=Tips_visable}" Padding="10,10,10,10"/>
    </Grid>
</Window>
